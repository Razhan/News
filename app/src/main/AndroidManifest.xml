<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.guanchazhe.news"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".NewsApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activity.NewsDetailActivity"
            android:label="@string/title_activity_news_detail"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.CommentaryListActivity"
            android:label="@string/title_activity_commentary_list"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.AuthorListActivity"
            android:label="@string/title_activity_author_list"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.SettingActivity"
            android:label="@string/title_activity_setting"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activity.ChannelManageActivity"
            android:label="@string/title_activity_channel_manage"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.FavoriteChannelActivity"
            android:label="@string/title_activity_favorite_channel"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.CommentaryDetailActivity"
            android:label="@string/title_activity_commentary_detail"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.ImageDetailActivity"
            android:label="@string/title_activity_image_detail"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.NewsWebViewActivity"
            android:label="@string/title_activity_news_web_view"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".views.activity.UserCommentActivity"
            android:label="@string/title_activity_user_comment"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>
