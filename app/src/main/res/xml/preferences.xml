<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="系统设置">

    <!--<CheckBoxPreference-->
        <!--android:title="夜间模式"-->
        <!--android:defaultValue="false"-->
        <!--android:key="nightMode"/>-->

    <CheckBoxPreference
        android:title="确认退出"
        android:defaultValue="true"
        android:key="confirmExit"
        android:summary="双击返回键退出应用"/>

    <CheckBoxPreference
        android:title="自动更新"
        android:defaultValue="true"
        android:key="autoUpdate"
        android:summary="自动检测更新"/>

    <ListPreference
        android:title="字体大小"
        android:key="textSize"
        android:defaultValue="16"
        android:entries="@array/text_size"
        android:entryValues="@array/text_size" />

    <Preference
        android:title="栏目设置"
        android:key="channelSetting"
        android:summary="设置喜欢的栏目"/>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="数据">

        <CheckBoxPreference
            android:title="无图模式"
            android:defaultValue="false"
            android:key="noPicMode"
            android:summary="加载网络图片"/>

        <Preference
            android:title="清除缓存"
            android:key="clearCache"
            android:summary="清除缓存数据"/>

    </PreferenceCategory>
</PreferenceScreen>