<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/message_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/spacing_xhuge">

    <ImageView
        android:id="@+id/message_view_image"
        android:layout_width="@dimen/height_errorstate_image"
        android:layout_height="@dimen/height_errorstate_image"
        android:layout_marginBottom="@dimen/spacing_huge"
        android:contentDescription="@null"
        android:tint="@color/red"
        tools:src="@drawable/bg_error" />

    <TextView
        android:id="@+id/message_view_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold"
        tools:text="@string/view_error_message" />

</LinearLayout>